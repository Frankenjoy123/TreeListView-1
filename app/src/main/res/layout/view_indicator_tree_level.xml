<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tree_level_indicator"
    android:layout_width="30.0dip"
    android:layout_height="fill_parent">

    <View
        android:id="@+id/lineTop"
        android:layout_width="@dimen/treeViewIndicatorLineWidth"
        android:layout_height="fill_parent"
        android:layout_above="@+id/imageToggle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white" />

    <View
        android:id="@+id/lineBottom"
        android:layout_width="@dimen/treeViewIndicatorLineWidth"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/imageToggle"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white" />

    <ImageView
        android:id="@id/imageToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/tree_level_indicator_expanded" />
</RelativeLayout>